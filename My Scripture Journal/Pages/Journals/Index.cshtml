@page
@model My_Scripture_Journal.Pages.Journals.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>

</p>
<form>
    <p>
        Search: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].Scripture)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="Book">Book</a>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].Text)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="Date">Date Added</a>

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Journal) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Scripture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
